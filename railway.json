{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd CA2_SOA && /opt/dotnet/dotnet publish --configuration Release --output ../out --self-contained false"
  },
  "deploy": {
    "startCommand": "cd out && /opt/dotnet/dotnet CA2_SOA.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}


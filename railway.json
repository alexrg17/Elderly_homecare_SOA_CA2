{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd CA2_SOA && /opt/dotnet/dotnet publish --configuration Release --output ../out --self-contained false"
  },
  "deploy": {
    "startCommand": "cd out && ASPNETCORE_URLS=http://0.0.0.0:$PORT /opt/dotnet/dotnet CA2_SOA.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}


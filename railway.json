{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd CA2_SOA && dotnet publish --configuration Release --output ../out"
  },
  "deploy": {
    "startCommand": "cd out && ASPNETCORE_ENVIRONMENT=Development dotnet CA2_SOA.dll --urls=http://0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}

